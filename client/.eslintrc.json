{
   "env": {
      "browser": true,
      "es2021": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "plugin:react/jsx-runtime"
   ],
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
   },
   "plugins": ["react", "prettier"],
   "rules": {
      "arrow-body-style": ["error", "as-needed"],
      "prettier/prettier": [
         "error",
         {
            "singleQuote": true,
            "parser": "flow",
            "trailingComma": "es5",
            "tabWidth": 3,
            "semi": false,
            "endOfLine": "auto",
            "arrowParens": "always"
         }
      ],
      "no-console": "off",
      "no-unused-vars": "off"
   }
}
